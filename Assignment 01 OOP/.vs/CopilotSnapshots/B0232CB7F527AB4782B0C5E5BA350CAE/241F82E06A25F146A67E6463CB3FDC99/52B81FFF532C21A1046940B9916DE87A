namespace Movie_Ticket_Booking_System
{
    using System;
    using System.Collections.Generic;

    internal class Cinema
    {
        private readonly List<Ticket> _tickets = new List<Ticket>();

        internal void AddTicket(Ticket ticket)
        {
            if (ticket == null) throw new ArgumentNullException(nameof(ticket));
            _tickets.Add(ticket);
        }

        internal Ticket this[int index]
        {
            get
            {
                if (index < 0 || index >= _tickets.Count)
                    throw new IndexOutOfRangeException(nameof(index));
                return _tickets[index];
            }
        }

        internal Ticket this[string movieName]
        {
            get
            {
                if (string.IsNullOrWhiteSpace(movieName)) return null;
                return _tickets.Find(t => string.Equals(t.MovieName, movieName, StringComparison.OrdinalIgnoreCase));
            }
        }

        internal int Count => _tickets.Count;
    }
}